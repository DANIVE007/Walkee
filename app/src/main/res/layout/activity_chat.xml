<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".ChatActivity">

    <Button
        android:id="@+id/buttonBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="201dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/green"
        android:text="Atrás" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="201dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="202dp"
        android:text="Mensajería"
        android:textColor="@color/green"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:layout_above="@+id/messageInputLayout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="186dp"
        android:layout_marginBottom="144dp" />

    <LinearLayout
        android:id="@+id/messageInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:id="@+id/sendButton"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chatListView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-70dp"
        android:text="Enviar" />

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="276dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="64dp"
        android:layout_toStartOf="@+id/sendButton"
        android:layout_weight="1"
        android:hint="Escribir mensaje" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="165dp"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="249dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="542dp"
        app:srcCompat="@drawable/mensajeia" />
</RelativeLayout>
