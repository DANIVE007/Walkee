<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:visibility="visible"
    android:visibility="visible">

    <Spinner
        android:id="@+id/spinnerGenero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="297dp"
        android:layout_marginEnd="37dp"
        android:entries="@array/Genero"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/textNom4"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="277dp"
        android:layout_marginBottom="398dp"
        android:text="Genero:" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="111dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="349dp"
        android:layout_marginEnd="243dp"
        android:layout_marginBottom="353dp"
        android:text="Nombres: " />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="111dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="392dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="310dp"
        android:text="N° Registro.: " />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="111dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="447dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="255dp"
        android:text="Fecha de Nac.: " />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="111dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="491dp"
        android:layout_marginEnd="239dp"
        android:layout_marginBottom="210dp"
        android:text="N° Chip: " />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="247dp"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="30dp"
        android:text="Registro Mascota"
        android:textColor="@color/green"
        android:textSize="45sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewSlogan"
        android:layout_width="80dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="694dp"
        app:srcCompat="@drawable/sloganwalkee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/green"
            android:text="Atrás" />

        <Button
            android:id="@+id/buttonNext"
            style="default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/green"
            android:enabled="false"
            android:text="Guardar"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/texRaza"
        android:layout_width="58dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="232dp"
        android:text="Raza:" />

    <TextView
        android:id="@+id/texTipoPerro"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="267dp"
        android:layout_marginBottom="435dp"
        android:text="Tipo de Perro:" />

    <Spinner
        android:id="@+id/spinnerRoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/texTipoPerro"
        android:layout_alignBottom="@id/texTipoPerro"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="263dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="25dp"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/editNombreMascota"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="197dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="33dp"
        android:ems="10"
        android:hint="Ingrese Nombre"
        android:inputType="text"
        android:minHeight="48dp"
        android:text=""
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editFechaNac"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="382dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="301dp"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:hint="Ingrese Fecha de Nacimiento"
        android:inputType="date"
        android:minHeight="48dp"
        android:text=""
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editNumRegistro"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="425dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="249dp"
        android:ems="10"
        android:hint="Ingrese N° Registro Nacional"
        android:inputType="number"
        android:minHeight="48dp"
        android:text=""
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editNumChip"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="197dp"
        android:layout_marginTop="473dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="198dp"
        android:ems="10"
        android:hint="Ingrese N° Chip"
        android:inputType="number"
        android:minHeight="48dp"
        android:text=""
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editDescripcion"
        android:layout_width="256dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="526dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="83dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="      Describa alguna Conidción Especial"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spinnerRazas"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/texRaza"
        android:layout_alignBottom="@id/texRaza"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="17dp"
        android:layout_toEndOf="@id/texRaza"
        android:spinnerMode="dropdown" />

    <ImageButton
        android:id="@+id/buttonSelectImage"
        android:layout_width="127dp"
        android:layout_height="99dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="265dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="584dp"
        android:background="@drawable/fotosubir"
        android:contentDescription="@string/app_name" />

</RelativeLayout>
